<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="KanbanFiles.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:KanbanFiles.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:KanbanFiles"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:KanbanFiles.ViewModels"
    xmlns:views="using:KanbanFiles.Views"
    x:Name="RootPage"
    Background="Transparent"
    mc:Ignorable="d">

    <Page.DataContext>
        <viewmodels:MainViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <Page.KeyboardAccelerators>
        <KeyboardAccelerator
            Key="O"
            Invoked="OpenFolder_Invoked"
            Modifiers="Control" />
        <KeyboardAccelerator
            Key="N"
            Invoked="NewItem_Invoked"
            Modifiers="Control" />
        <KeyboardAccelerator
            Key="N"
            Invoked="NewColumn_Invoked"
            Modifiers="Control,Shift" />
        <KeyboardAccelerator Key="F5" Invoked="Refresh_Invoked" />
        <KeyboardAccelerator Key="Escape" Invoked="Escape_Invoked" />
        <KeyboardAccelerator Key="Left" Invoked="NavigateLeft_Invoked" />
        <KeyboardAccelerator Key="Right" Invoked="NavigateRight_Invoked" />
        <KeyboardAccelerator Key="Up" Invoked="NavigateUp_Invoked" />
        <KeyboardAccelerator Key="Down" Invoked="NavigateDown_Invoked" />
    </Page.KeyboardAccelerators>

    <Grid>
        <!--  Main Board View  -->
        <Grid Visibility="{x:Bind ViewModel.IsLoaded, Mode=OneWay}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Top CommandBar  -->
            <CommandBar Grid.Row="0" DefaultLabelPosition="Right">
                <AppBarButton
                    Command="{x:Bind ViewModel.OpenFolderCommand}"
                    Icon="Folder"
                    Label="Open Folder" />
                <AppBarButton Command="{x:Bind ViewModel.AddColumnCommand}" Label="New Column">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE710;" />
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton Command="{x:Bind ViewModel.EditFileFilterCommand}" Label="File Filter">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE71C;" />
                    </AppBarButton.Icon>
                </AppBarButton>

                <CommandBar.Content>
                    <TextBlock
                        Margin="20,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="{x:Bind ViewModel.BoardName, Mode=OneWay}" />
                </CommandBar.Content>
            </CommandBar>

            <!--  Notification InfoBar  -->
            <InfoBar
                x:Name="NotificationBar"
                Title="{x:Bind ViewModel.NotificationTitle, Mode=OneWay}"
                Grid.Row="1"
                Margin="16,8"
                IsClosable="True"
                IsOpen="{x:Bind ViewModel.IsNotificationVisible, Mode=TwoWay}"
                Message="{x:Bind ViewModel.NotificationMessage, Mode=OneWay}"
                Severity="{x:Bind ViewModel.NotificationSeverity, Mode=OneWay}" />

            <!--  Horizontal ScrollViewer for Columns  -->
            <ScrollViewer
                Grid.Row="2"
                HorizontalScrollBarVisibility="Auto"
                HorizontalScrollMode="Enabled"
                VerticalScrollBarVisibility="Disabled"
                VerticalScrollMode="Disabled">

                <ItemsControl x:Name="ColumnsItemsControl" ItemsSource="{x:Bind ViewModel.Columns, Mode=OneWay}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel
                                Margin="16"
                                Orientation="Horizontal"
                                Spacing="16" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="viewmodels:ColumnViewModel">
                            <controls:ColumnControl DataContext="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!--  Empty State  -->
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="24"
            Visibility="{x:Bind ViewModel.IsLoaded, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">

            <FontIcon
                FontSize="72"
                Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                Glyph="&#xE8B7;" />

            <TextBlock
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="SemiBold"
                Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                Text="No Board Loaded" />

            <TextBlock
                HorizontalAlignment="Center"
                FontSize="16"
                Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                Text="Open a folder to get started" />

            <!--  Recent Folders List  -->
            <StackPanel
                MaxWidth="500"
                Margin="0,24,0,0"
                HorizontalAlignment="Center"
                Visibility="{x:Bind ViewModel.HasRecentFolders, Mode=OneWay}">

                <TextBlock
                    Margin="0,0,0,8"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="Recent Folders" />

                <ItemsControl ItemsSource="{x:Bind ViewModel.RecentFolders, Mode=OneWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="x:String">
                            <Border
                                Margin="0,0,0,4"
                                Padding="12,8"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                CornerRadius="4">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!--  Clickable folder path  -->
                                    <Button
                                        Grid.Column="0"
                                        Padding="0"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="RecentFolderButton_Click"
                                        CommandParameter="{x:Bind}">
                                        <Button.Resources>
                                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="Transparent" />
                                            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="Transparent" />
                                        </Button.Resources>

                                        <TextBlock
                                            FontSize="13"
                                            Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                            Text="{x:Bind}"
                                            TextTrimming="CharacterEllipsis">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{x:Bind}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                    </Button>

                                    <!--  Remove button  -->
                                    <Button
                                        Grid.Column="1"
                                        Width="28"
                                        Height="28"
                                        Margin="8,0,0,0"
                                        Padding="0"
                                        VerticalAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="RemoveRecentFolderButton_Click"
                                        CommandParameter="{x:Bind}">
                                        <Button.Resources>
                                            <SolidColorBrush
                                                x:Key="ButtonBackgroundPointerOver"
                                                Opacity="0.1"
                                                Color="{ThemeResource SystemErrorColor}" />
                                            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="{ThemeResource SystemErrorColor}" />
                                            <SolidColorBrush
                                                x:Key="ButtonBackgroundPressed"
                                                Opacity="0.2"
                                                Color="{ThemeResource SystemErrorColor}" />
                                            <SolidColorBrush x:Key="ButtonForegroundPressed" Color="{ThemeResource SystemErrorColor}" />
                                        </Button.Resources>

                                        <FontIcon
                                            FontSize="12"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Glyph="&#xE711;" />

                                        <ToolTipService.ToolTip>
                                            <ToolTip Content="Remove from recent folders" />
                                        </ToolTipService.ToolTip>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <Button
                HorizontalAlignment="Center"
                Command="{x:Bind ViewModel.OpenFolderCommand}"
                Content="Open Folder"
                Style="{StaticResource AccentButtonStyle}">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid
                            Padding="24,12"
                            Background="{TemplateBinding Background}"
                            CornerRadius="4">
                            <ContentPresenter />
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>

        <!--  Item Detail Overlay  -->
        <Grid
            x:Name="ItemDetailOverlay"
            Visibility="Collapsed">
            <views:ItemDetailView
                x:Name="ItemDetailViewControl" />
        </Grid>
    </Grid>
</Page>
