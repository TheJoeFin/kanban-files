<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="KanbanFiles.Views.MainPage"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:KanbanFiles"
    xmlns:controls="using:KanbanFiles.Controls"
    xmlns:viewmodels="using:KanbanFiles.ViewModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Page.DataContext>
        <viewmodels:MainViewModel x:Name="ViewModel" />
    </Page.DataContext>
    
    <Page.KeyboardAccelerators>
        <KeyboardAccelerator Modifiers="Control" Key="O" Invoked="OpenFolder_Invoked" />
        <KeyboardAccelerator Modifiers="Control" Key="N" Invoked="NewItem_Invoked" />
        <KeyboardAccelerator Modifiers="Control,Shift" Key="N" Invoked="NewColumn_Invoked" />
        <KeyboardAccelerator Key="F5" Invoked="Refresh_Invoked" />
        <KeyboardAccelerator Key="Left" Invoked="NavigateLeft_Invoked" />
        <KeyboardAccelerator Key="Right" Invoked="NavigateRight_Invoked" />
        <KeyboardAccelerator Key="Up" Invoked="NavigateUp_Invoked" />
        <KeyboardAccelerator Key="Down" Invoked="NavigateDown_Invoked" />
    </Page.KeyboardAccelerators>

    <Grid>
        <!-- Main Board View -->
        <Grid Visibility="{x:Bind ViewModel.IsLoaded, Mode=OneWay}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Top CommandBar -->
            <CommandBar Grid.Row="0" DefaultLabelPosition="Right">
                <AppBarButton 
                    Icon="Folder" 
                    Label="Open Folder"
                    Command="{x:Bind ViewModel.OpenFolderCommand}" />
                <AppBarButton 
                    Label="+ New Column"
                    Command="{x:Bind ViewModel.AddColumnCommand}">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE710;" />
                    </AppBarButton.Icon>
                </AppBarButton>
                
                <CommandBar.Content>
                    <TextBlock 
                        Text="{x:Bind ViewModel.BoardName, Mode=OneWay}"
                        FontSize="20"
                        FontWeight="SemiBold"
                        VerticalAlignment="Center"
                        Margin="20,0,0,0" />
                </CommandBar.Content>
            </CommandBar>
            
            <!-- Notification InfoBar -->
            <InfoBar Grid.Row="1"
                     x:Name="NotificationBar"
                     IsOpen="{x:Bind ViewModel.IsNotificationVisible, Mode=TwoWay}"
                     Title="{x:Bind ViewModel.NotificationTitle, Mode=OneWay}"
                     Message="{x:Bind ViewModel.NotificationMessage, Mode=OneWay}"
                     Severity="{x:Bind ViewModel.NotificationSeverity, Mode=OneWay}"
                     IsClosable="True"
                     Margin="16,8" />

            <!-- Horizontal ScrollViewer for Columns -->
            <ScrollViewer 
                Grid.Row="2"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Disabled"
                HorizontalScrollMode="Enabled"
                VerticalScrollMode="Disabled">
                
                <ItemsControl 
                    x:Name="ColumnsItemsControl"
                    ItemsSource="{x:Bind ViewModel.Columns, Mode=OneWay}"
                    AllowDrop="True"
                    DragOver="ColumnsItemsControl_DragOver"
                    Drop="ColumnsItemsControl_Drop">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel 
                                Orientation="Horizontal" 
                                Spacing="16"
                                Margin="16" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="viewmodels:ColumnViewModel">
                            <controls:ColumnControl DataContext="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- Empty State -->
        <StackPanel 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="24"
            Visibility="{x:Bind ViewModel.IsLoaded, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            
            <FontIcon 
                Glyph="&#xE8B7;" 
                FontSize="72"
                Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" />
            
            <TextBlock
                Text="No Board Loaded"
                FontSize="24"
                FontWeight="SemiBold"
                HorizontalAlignment="Center"
                Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" />
            
            <TextBlock
                Text="Open a folder to get started"
                FontSize="16"
                HorizontalAlignment="Center"
                Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" />
            
            <!-- Recent Folders List -->
            <StackPanel 
                Visibility="{x:Bind ViewModel.HasRecentFolders, Mode=OneWay}"
                MaxWidth="500"
                Margin="0,24,0,0"
                HorizontalAlignment="Center">
                
                <TextBlock
                    Text="Recent Folders"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Margin="0,0,0,8"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                
                <ItemsControl ItemsSource="{x:Bind ViewModel.RecentFolders, Mode=OneWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="x:String">
                            <Border 
                                Margin="0,0,0,4"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                CornerRadius="4"
                                Padding="12,8">
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Clickable folder path -->
                                    <Button
                                        Grid.Column="0"
                                        Click="RecentFolderButton_Click"
                                        CommandParameter="{x:Bind}"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="0">
                                        <Button.Resources>
                                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="Transparent"/>
                                            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="Transparent"/>
                                        </Button.Resources>
                                        
                                        <TextBlock 
                                            Text="{x:Bind}"
                                            TextTrimming="CharacterEllipsis"
                                            FontSize="13"
                                            Foreground="{ThemeResource TextFillColorPrimaryBrush}">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{x:Bind}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                    </Button>
                                    
                                    <!-- Remove button -->
                                    <Button
                                        Grid.Column="1"
                                        Click="RemoveRecentFolderButton_Click"
                                        CommandParameter="{x:Bind}"
                                        Width="28"
                                        Height="28"
                                        Padding="0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        VerticalAlignment="Center"
                                        Margin="8,0,0,0">
                                        <Button.Resources>
                                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="{ThemeResource SystemErrorColor}" Opacity="0.1"/>
                                            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="{ThemeResource SystemErrorColor}"/>
                                            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="{ThemeResource SystemErrorColor}" Opacity="0.2"/>
                                            <SolidColorBrush x:Key="ButtonForegroundPressed" Color="{ThemeResource SystemErrorColor}"/>
                                        </Button.Resources>
                                        
                                        <FontIcon 
                                            Glyph="&#xE711;" 
                                            FontSize="12"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        
                                        <ToolTipService.ToolTip>
                                            <ToolTip Content="Remove from recent folders" />
                                        </ToolTipService.ToolTip>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            
            <Button
                Content="Open Folder"
                Command="{x:Bind ViewModel.OpenFolderCommand}"
                HorizontalAlignment="Center"
                Style="{StaticResource AccentButtonStyle}">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="{TemplateBinding Background}" 
                              CornerRadius="4"
                              Padding="24,12">
                            <ContentPresenter />
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Page>
