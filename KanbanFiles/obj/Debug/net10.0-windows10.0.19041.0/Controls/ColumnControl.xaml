<UserControl
    x:Class="KanbanFiles.Controls.ColumnControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:KanbanFiles.Controls"
    mc:Ignorable="d"
    Width="280">

    <Grid Background="{ThemeResource LayerFillColorDefaultBrush}"
          CornerRadius="8"
          BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
          BorderThickness="1"
          Padding="12">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid x:ConnectionId='2' Grid.Row="0" 
              Margin="0,0,0,12"
              CanDrag="True"
                                                
                                                  >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:ConnectionId='10' Grid.Column="0"
                       Text="{Binding Name, Mode=OneWay}"
                       FontSize="16"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       TextTrimming="CharacterEllipsis"
                                                                />

            <Button Grid.Column="1"
                    Content="&#xE712;"
                    FontFamily="Segoe MDL2 Assets"
                    Width="32"
                    Height="32"
                    Background="Transparent"
                    BorderThickness="0">
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem x:ConnectionId='11' Text="Create Group" 
                                        Icon="Add"
                                                                         />
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem x:ConnectionId='12' Text="Rename" 
                                        Icon="Rename"
                                                                    />
                        <MenuFlyoutItem x:ConnectionId='13' Text="Delete" 
                                        Icon="Delete"
                                                                    />
                    </MenuFlyout>
                </Button.Flyout>
            </Button>
        </Grid>

        <!-- Items Area -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <!-- Ungrouped Items Section -->
                <ItemsControl x:ConnectionId='4' x:Name="UngroupedItemsControlElement"
                              ItemsSource="{Binding UngroupedItems, Mode=OneWay}"
                              AllowDrop="True"
                                                              
                                                      >
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <controls:KanbanItemCardControl Margin="0,0,0,8"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Groups Section -->
                <ItemsControl x:ConnectionId='5' x:Name="GroupsControlElement"
                              ItemsSource="{Binding Groups, Mode=OneWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,8">
                                <!-- Group Header -->
                                <controls:GroupHeaderControl/>
                                
                                <!-- Group Items (visible when not collapsed) -->
                                <ItemsControl x:ConnectionId='7' ItemsSource="{Binding Items, Mode=OneWay}"
                                              AllowDrop="True"
                                                                              
                                                                      
                                              Visibility="{Binding IsCollapsed, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <controls:KanbanItemCardControl Margin="0,0,0,8"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Button x:ConnectionId='3' Grid.Row="2"
                Content="+ Add Item"
                HorizontalAlignment="Stretch"
                Margin="0,12,0,0"
                                           
                Style="{StaticResource AccentButtonStyle}"/>
    </Grid>
</UserControl>

