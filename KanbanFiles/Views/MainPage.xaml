<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="KanbanFiles.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:KanbanFiles"
    xmlns:controls="using:KanbanFiles.Controls"
    xmlns:viewmodels="using:KanbanFiles.ViewModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Page.DataContext>
        <viewmodels:MainViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <Grid>
        <!-- Main Board View -->
        <Grid Visibility="{x:Bind ViewModel.IsLoaded, Mode=OneWay}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Top CommandBar -->
            <CommandBar Grid.Row="0" DefaultLabelPosition="Right">
                <AppBarButton 
                    Icon="Folder" 
                    Label="Open Folder"
                    Command="{x:Bind ViewModel.OpenFolderCommand}" />
                <AppBarButton 
                    Label="+ New Column"
                    Command="{x:Bind ViewModel.AddColumnCommand}">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE710;" />
                    </AppBarButton.Icon>
                </AppBarButton>
                
                <CommandBar.Content>
                    <TextBlock 
                        Text="{x:Bind ViewModel.BoardName, Mode=OneWay}"
                        FontSize="20"
                        FontWeight="SemiBold"
                        VerticalAlignment="Center"
                        Margin="20,0,0,0" />
                </CommandBar.Content>
            </CommandBar>

            <!-- Horizontal ScrollViewer for Columns -->
            <ScrollViewer 
                Grid.Row="1"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Disabled"
                HorizontalScrollMode="Enabled"
                VerticalScrollMode="Disabled">
                
                <ItemsControl 
                    x:Name="ColumnsItemsControl"
                    ItemsSource="{x:Bind ViewModel.Columns, Mode=OneWay}"
                    AllowDrop="True"
                    DragOver="ColumnsItemsControl_DragOver"
                    Drop="ColumnsItemsControl_Drop">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel 
                                Orientation="Horizontal" 
                                Spacing="16"
                                Margin="16" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="viewmodels:ColumnViewModel">
                            <controls:ColumnControl DataContext="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- Empty State -->
        <StackPanel 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="24"
            Visibility="{x:Bind ViewModel.IsLoaded, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            
            <FontIcon 
                Glyph="&#xE8B7;" 
                FontSize="72"
                Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" />
            
            <TextBlock
                Text="No Board Loaded"
                FontSize="24"
                FontWeight="SemiBold"
                HorizontalAlignment="Center"
                Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" />
            
            <TextBlock
                Text="Open a folder to get started"
                FontSize="16"
                HorizontalAlignment="Center"
                Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" />
            
            <Button
                Content="Open Folder"
                Command="{x:Bind ViewModel.OpenFolderCommand}"
                HorizontalAlignment="Center"
                Style="{StaticResource AccentButtonStyle}">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="{TemplateBinding Background}" 
                              CornerRadius="4"
                              Padding="24,12">
                            <ContentPresenter />
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Page>
