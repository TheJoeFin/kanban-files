<UserControl
    x:Class="KanbanFiles.Controls.KanbanItemCardControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:KanbanFiles.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:KanbanItemViewModel}"
    mc:Ignorable="d">

    <Border
        x:Name="CardBorder"
        Padding="12"
        AllowDrop="True"
        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
        CanDrag="True"
        CornerRadius="8"
        DoubleTapped="CardBorder_DoubleTapped"
        DragOver="CardBorder_DragOver"
        DragStarting="CardBorder_DragStarting"
        Drop="CardBorder_Drop"
        DropCompleted="CardBorder_DropCompleted"
        PointerEntered="CardBorder_PointerEntered"
        PointerExited="CardBorder_PointerExited">

        <Border.Shadow>
            <ThemeShadow />
        </Border.Shadow>

        <Border.ContextFlyout>
            <MenuFlyout>
                <MenuFlyoutItem Command="{x:Bind ViewModel.OpenDetailCommand}" Text="Open">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE8E5;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem Click="RenameItem_Click" Text="Rename">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE8AC;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutSeparator />
                <MenuFlyoutItem Click="DeleteItem_Click" Text="Delete">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE74D;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
            </MenuFlyout>
        </Border.ContextFlyout>

        <StackPanel Spacing="8">
            <TextBlock
                FontSize="14"
                FontWeight="Bold"
                Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                Text="{x:Bind ViewModel.Title, Mode=OneWay}"
                TextTrimming="CharacterEllipsis"
                TextWrapping="WrapWholeWords" />

            <TextBlock
                FontSize="12"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                LineHeight="18"
                MaxLines="2"
                Text="{x:Bind ViewModel.ContentPreview, Mode=OneWay}"
                TextTrimming="CharacterEllipsis"
                TextWrapping="Wrap" />

            <TextBlock
                HorizontalAlignment="Right"
                FontSize="10"
                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                Text="{x:Bind ViewModel.LastModifiedDisplay, Mode=OneWay}" />
        </StackPanel>
    </Border>
</UserControl>
