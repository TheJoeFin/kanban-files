<UserControl x:ConnectionId='1'
    x:Class="KanbanFiles.Controls.KanbanItemCardControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:KanbanFiles.ViewModels"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=viewmodels:KanbanItemViewModel}">

    <Border x:ConnectionId='2'
        x:Name="CardBorder"
        Background="#F9F9F9"
        CornerRadius="8"
        Padding="12"
        CanDrag="True"
                                              
                                                
                                                  
                                                >
        
        <Border.Shadow>
            <ThemeShadow />
        </Border.Shadow>
        
        <Border.ContextFlyout>
            <MenuFlyout>
                <MenuFlyoutItem x:ConnectionId='3' Text="Open"                       >
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE8E5;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem x:ConnectionId='4' Text="Rename"                         >
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE8AC;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutSeparator />
                <MenuFlyoutItem x:ConnectionId='5' Text="Delete"                         >
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE74D;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
            </MenuFlyout>
        </Border.ContextFlyout>

        <StackPanel Spacing="8">
            <TextBlock x:ConnectionId='6'
                                                            
                FontSize="14"
                FontWeight="Bold"
                TextWrapping="WrapWholeWords"
                TextTrimming="CharacterEllipsis" />

            <TextBlock x:ConnectionId='7'
                                                                     
                FontSize="12"
                Foreground="#666666"
                MaxLines="2"
                TextWrapping="Wrap"
                TextTrimming="CharacterEllipsis"
                LineHeight="18" />

            <TextBlock x:ConnectionId='8'
                                                                          
                FontSize="10"
                Foreground="#999999"
                HorizontalAlignment="Right" />
        </StackPanel>
    </Border>
</UserControl>

