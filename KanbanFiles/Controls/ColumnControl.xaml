<UserControl
    x:Class="KanbanFiles.Controls.ColumnControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:KanbanFiles.Controls"
    mc:Ignorable="d"
    Width="280">

    <Grid Background="{ThemeResource LayerFillColorDefaultBrush}"
          CornerRadius="8"
          BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
          BorderThickness="1"
          Padding="12">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" 
              Margin="0,0,0,12"
              CanDrag="True"
              DragStarting="Header_DragStarting"
              DropCompleted="Header_DropCompleted">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="{Binding Name, Mode=OneWay}"
                       FontSize="16"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       TextTrimming="CharacterEllipsis"
                       DoubleTapped="NameTextBlock_DoubleTapped"/>

            <Button Grid.Column="1"
                    Content="&#xE712;"
                    FontFamily="Segoe MDL2 Assets"
                    Width="32"
                    Height="32"
                    Background="Transparent"
                    BorderThickness="0">
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="Create Group" 
                                        Icon="Add"
                                        Click="CreateGroupMenuItem_Click"/>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem Text="Rename" 
                                        Icon="Rename"
                                        Click="RenameMenuItem_Click"/>
                        <MenuFlyoutItem Text="Delete" 
                                        Icon="Delete"
                                        Click="DeleteMenuItem_Click"/>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>
        </Grid>

        <!-- Items Area -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <!-- Ungrouped Items Section -->
                <ItemsControl x:Name="UngroupedItemsControlElement"
                              ItemsSource="{Binding UngroupedItems, Mode=OneWay}"
                              AllowDrop="True"
                              DragOver="ItemsControl_DragOver"
                              Drop="ItemsControl_Drop">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <controls:KanbanItemCardControl Margin="0,0,0,8"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Groups Section -->
                <ItemsControl x:Name="GroupsControlElement"
                              ItemsSource="{Binding Groups, Mode=OneWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,8">
                                <!-- Group Header -->
                                <controls:GroupHeaderControl/>
                                
                                <!-- Group Items (visible when not collapsed) -->
                                <ItemsControl ItemsSource="{Binding Items, Mode=OneWay}"
                                              AllowDrop="True"
                                              DragOver="ItemsControl_DragOver"
                                              Drop="ItemsControl_Drop"
                                              Visibility="{Binding IsCollapsed, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <controls:KanbanItemCardControl Margin="0,0,0,8"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Margin="0,12,0,0">
            <!-- Add Item Button (visible by default) -->
            <Button x:Name="AddItemButton"
                    Content="+ Add Item"
                    HorizontalAlignment="Stretch"
                    Click="AddItemButton_Click"
                    Style="{StaticResource AccentButtonStyle}"/>
            
            <!-- Inline Add Item Entry (collapsed by default) -->
            <StackPanel x:Name="AddItemPanel"
                        Visibility="Collapsed"
                        Spacing="8">
                <TextBox x:Name="AddItemTextBox"
                         PlaceholderText="Enter item title..."
                         KeyDown="AddItemTextBox_KeyDown"/>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button Content="Add"
                            Style="{StaticResource AccentButtonStyle}"
                            Click="AddItemConfirm_Click"
                            MinWidth="80"/>
                    <Button Content="Cancel"
                            Click="AddItemCancel_Click"
                            MinWidth="80"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
