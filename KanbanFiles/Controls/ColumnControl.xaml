<UserControl
    x:Class="KanbanFiles.Controls.ColumnControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:KanbanFiles.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="280"
    mc:Ignorable="d">

    <Grid
        Padding="12"
        AllowDrop="True"
        Background="{ThemeResource LayerFillColorDefaultBrush}"
        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
        BorderThickness="1"
        CornerRadius="8"
        DragOver="ItemsControl_DragOver"
        Drop="ItemsControl_Drop">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Grid
            Grid.Row="0"
            Margin="0,0,0,12"
            CanDrag="True"
            DragStarting="Header_DragStarting"
            DropCompleted="Header_DropCompleted">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                DoubleTapped="NameTextBlock_DoubleTapped"
                FontSize="16"
                FontWeight="Bold"
                Text="{Binding Name, Mode=OneWay}"
                TextTrimming="CharacterEllipsis" />

            <Button
                Grid.Column="1"
                Width="32"
                Height="32"
                Background="Transparent"
                BorderThickness="0"
                Content="&#xE712;"
                FontFamily="Segoe MDL2 Assets">
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem
                            Click="CreateGroupMenuItem_Click"
                            Icon="Add"
                            Text="Create Group" />
                        <MenuFlyoutSeparator />
                        <MenuFlyoutItem
                            Click="RenameMenuItem_Click"
                            Icon="Rename"
                            Text="Rename" />
                        <MenuFlyoutItem
                            Click="DeleteMenuItem_Click"
                            Icon="Delete"
                            Text="Delete" />
                    </MenuFlyout>
                </Button.Flyout>
            </Button>
        </Grid>

        <!--  Items Area  -->
        <ScrollViewer
            Grid.Row="1"
            AllowDrop="True"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!--  Ungrouped Items Section  -->
                <ItemsControl
                    x:Name="UngroupedItemsControlElement"
                    MinHeight="40"
                    AllowDrop="True"
                    Background="Transparent"
                    DragOver="ItemsControl_DragOver"
                    Drop="ItemsControl_Drop"
                    ItemsSource="{Binding UngroupedItems, Mode=OneWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <controls:KanbanItemCardControl Margin="0,0,0,8" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!--  Groups Section  -->
                <ItemsControl x:Name="GroupsControlElement" ItemsSource="{Binding Groups, Mode=OneWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,8">
                                <!--  Group Header  -->
                                <controls:GroupHeaderControl />

                                <!--  Group Items (visible when not collapsed)  -->
                                <ItemsControl
                                    MinHeight="40"
                                    AllowDrop="True"
                                    ItemsSource="{Binding Items, Mode=OneWay}"
                                    Loaded="GroupItemsControl_Loaded"
                                    Visibility="{Binding IsCollapsed, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <controls:KanbanItemCardControl Margin="0,0,0,8" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!--  Footer  -->
        <StackPanel Grid.Row="2" Margin="0,12,0,0">
            <!--  Add Item Button (visible by default)  -->
            <Button
                x:Name="AddItemButton"
                HorizontalAlignment="Stretch"
                Click="AddItemButton_Click"
                Content="+ Add Item"
                Style="{StaticResource AccentButtonStyle}" />

            <!--  Inline Add Item Entry (collapsed by default)  -->
            <StackPanel
                x:Name="AddItemPanel"
                Spacing="8"
                Visibility="Collapsed">
                <TextBox
                    x:Name="AddItemTextBox"
                    KeyDown="AddItemTextBox_KeyDown"
                    PlaceholderText="Enter item title..." />
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button
                        MinWidth="80"
                        Click="AddItemConfirm_Click"
                        Content="Add"
                        Style="{StaticResource AccentButtonStyle}" />
                    <Button
                        MinWidth="80"
                        Click="AddItemCancel_Click"
                        Content="Cancel" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
